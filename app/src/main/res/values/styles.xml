<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorBackground</item>
        <item name="colorPrimaryDark">@color/colorPassive</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:fontFamily">@font/fira_sans</item>
    </style>

    <style name="ProgressBarStyle">
        <item name="colorAccent">@color/colorBackground</item>
    </style>

    <style name="Theme.Rating" parent="Theme.AppCompat.Light">
        <item name="colorAccent">@color/rating</item>
    </style>

    <style name="activityStyle">
        <item name="android:background">@color/white</item>
    </style>

    <style name="customButtonStyle">
        <item name="android:textColor">@color/white</item>
        <item name="android:background">@drawable/button_rounded</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textStyle">bold</item>
    </style>


</resources>
